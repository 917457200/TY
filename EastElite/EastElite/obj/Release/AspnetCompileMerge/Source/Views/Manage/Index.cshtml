@model  BLL.Cookie.TeUser
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/MP.cshtml";
}
@section Head{
    <script src="~/Scripts/Menu.js" type="text/javascript"></script>
    <link href="~/Content/Css/SiteIndex.css" rel="stylesheet" />
    <link href="~/Content/Css/bootstrap.min.css" rel="stylesheet" />
}
<body class="body">
    <div class="mainwrapper">
        @* 头部个人信息*@
        <div class="navbar navbar-primary b-b" id="head" style="margin-bottom:0px;">
            <div class="bg-light b-b navbar-top">
                <div class="container clearfix">
                    <span>欢迎使用</span>
                    <span class="text-primary">统一管理平台系统</span>
                    <div class="pull-right" id="logoutForm">
                        <ul class="reset login-wrapper">
                            <li>
                                <span id="loginuser">
                                    您好 , @Model.userName
                                    @switch( Model.userType )
                                    {
                                        case "1":
                                    <span>教师</span>
                                            break;
                                        case "2":
                                    <span>学生</span>
                                            break;
                                        case "3":
                                    <span>家长</span>
                                            break;
                                        default:
                                            break;
                                    }
                                </span>
                            </li>
                            <li class="divider">
                                <span>&nbsp;</span>
                            </li>
                            <li>
                                <a id="loginout" href="/Home/OutLogin">退出</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="container m-b-n">
                <div class="row">
                    <div class="col-md-8 col-xs-8">
                        <a href="#">
                            <img style="height: 60px;" src="~/Content/Img/Logo.png">
                            <span class="text-black text-big"></span>
                        </a>
                    </div>
                    <div class="col-md-4 col-xs-4">
                        <div id="searchForm" action="#" class="input-group m-t-l">
                            <input type="text" autocomplete="off" placeholder="请输入关键字" class="form-control" name="keyword">
                            <div class="input-group-btn dropdown">
                                <button type="submit" class="btn btn-default">
                                    <span class="glyphicon glyphicon-search"></span>
                                    <span>搜索</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bg-primary">
                <div id="navMain" class="container nav-main">
                    <a  href="/Home/Index">
                        <span>系统首页</span>
                    </a>
                    <a class="active"  href="/Manage/Index">后台管理</a>
                </div>
            </div>
        </div>

        <div class="conent">
            <div style="position: relative;width:1024px; margin:0 auto;">
                <div class="nav-wrapper pull-left">
                    <ul id="subMenuList" class="reset nav-tabs " style="overflow: hidden; width: 180px; border: 1px solid #ddd">
                      
                    </ul>
                </div>
                @* 菜单部分*@
                @*<div class="leftpanel">
                    <div class="leftmenu">
                        <ul class="nav nav-tabs nav-stacked">
                        
                        </ul>
                    </div>
                </div>*@
                @* 小导航菜单*@
                <div class="rightpanel">
                    
                    @* iframe 操作界面*@
                    <iframe width="100%" height="635" frameborder="0" src="../Role/RoleList" scrolling="auto"  id="left" name="left"></iframe>
                </div>
            </div>
        </div>
       
         
       
    </div>
    <p style=" text-align:center; margin-top:20px;">东方博冠（北京）科技有限公司 版权所有 &copy;2016-2020</p>
</body>
