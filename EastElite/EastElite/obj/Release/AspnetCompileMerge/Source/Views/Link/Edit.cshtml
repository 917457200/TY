@model BLL.Link
@{

    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/MP.cshtml";
}
@section Head{
    <script src="~/Scripts/WEB/Link.js" type="text/javascript"></script>
}
<body class="errorpage">
    <div class="stdform">
        <div class="maincontent">
            <div class="maincontentinner">
                <div class="widget">
                    <h4 class="widgettitle">添加系统链接</h4>
                    <div class="widgetcontent">
                        @using( Html.BeginForm( "Edit", "Link", FormMethod.Post, new { enctype = "multipart/form-data" } ) )
                        {
                            @Html.ValidationSummary( true )
                            @Html.HiddenFor( model => model.Code )
                            @Html.HiddenFor( model => model.State )
                            @Html.HiddenFor( model => model.img )
                            <div class="par control-group">
                                <div class="label-left">系统名称</div>
                                <div class="controls">
                                    @Html.TextBoxFor( model => model.oaName, new { @class = "input1" } )
                                    <span style="color: red">*</span>
                                    @Html.ValidationMessageFor( model => model.oaName )
                                </div>
                            </div>
                            <div class="par control-group">
                                <div class="label-left">
                                    系统地址
                                </div>
                                <div class="controls">
                                    @Html.TextBoxFor( model => model.link, new { @class = "input1" } )
                                    <span style="color: red">*</span>
                                    @Html.ValidationMessageFor( model => model.link )


                                </div>
                            </div>
                            <div class="par control-group">
                                <div class="label-left">
                                    系统排序
                                </div>
                                <div class="controls">
                                    @Html.TextBoxFor( model => model.sort, new { @class = "input1" } )
                                    <span style="color: red">*</span>
                                    @Html.ValidationMessageFor( model => model.sort )
                                </div>
                            </div>
                            <div class="par control-group">
                                <div class="label-left">
                                    系统图标
                                </div>
                                <div class="fileupload fileupload-new">
                                    <div class="input-append">
                                        <div class="uneditable-input span3">
                                            <i class="iconfa-file fileupload-exists"></i>
                                            <span id="fileupload" class="fileupload-preview"></span>
                                        </div>
                                        <span class="btn btn-file">
                                            <span class="fileupload-new">上传</span>
                                            <input type="file" id="FileUpload1" name="FileUpload1" onblur="OpenFile()" />
                                        </span>
                                    </div> <span class="red ml10">最佳像素大小 150 * 150</span>
                                </div>

                            </div>
                            <div class="par control-group oh">
                                <div class="label-left">
                                    &nbsp;
                                </div>
                                <div class="fileupload fileupload-new fl">
                                    <div style=" background: #0066cc none repeat scroll 0 0; width:150px;">
                                        <img id="Img_O" src="/Content/Img/@Model.img" width="150" />
                                    </div>
                                </div>

                            </div>
                            <p class="stdformbutton" style="text-align:center;">
                                <input class="btn" type="submit" style="display:inline-block;" onclick="return Add()" value="提交" />
                                <input class="btn" type="submit" style="display:inline-block;" onclick=" location.href = 'List'; return false;" value="返回" />
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>